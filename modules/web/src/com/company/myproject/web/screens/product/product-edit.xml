<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://productEdit.caption"
        focusComponent="form"
        messagesPack="com.company.myproject.web.screens.product">
    <data>
        <instance id="productDc"
                  class="com.company.myproject.entity.Product"
                  view="product-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="productDc">
            <column width="350px">
                <textField id="productNameField" property="name"/>
                <pickerField id="productProducerField" property="producer">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="productPriceField" property="price"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
