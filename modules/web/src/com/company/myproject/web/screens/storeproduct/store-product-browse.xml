<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://storeProductBrowse.caption"
        focusComponent="storeProductsTable"
        messagesPack="com.company.myproject.web.screens.storeproduct">
    <data readOnly="true">
        <collection id="storeProductsDc"
                    class="com.company.myproject.entity.StoreProduct"
                    view="storeProduct-view">
            <loader id="storeProductsDl">
                <query>
                    <![CDATA[select e from myproject_StoreProduct e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="storeProductsTable"
            spacing="true">
        <filter id="filter"
                applyTo="storeProductsTable"
                dataLoader="storeProductsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="storeProductsTable"
                    width="100%"
                    dataContainer="storeProductsDc">
            <actions>
            </actions>
            <columns>
                <column id="product" caption="msg://StoreProduct.product"/>
                <column id="store" caption="msg://StoreProduct.store"/>
                <column id="price" caption="msg://StoreProduct.price"/>
                <column id="amount" caption="msg://StoreProduct.amount"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
