<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://storeEdit"
        focusComponent="form"
        messagesPack="com.company.myproject.web.screens.store">
    <data>
        <instance id="storeDc"
                  class="com.company.myproject.entity.Store"
                  view="store-view">
            <loader/>
            <collection id="storeProductDc" property="storeProducts"/>
            <collection id="usersDc" property="staff"/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <tabSheet>
            <tab id="mainTab" caption="msg://mainTab" spacing="true">
                <form id="form" dataContainer="storeDc">
                    <column width="350px">
                        <textField id="storeNumField" property="number" caption="msg://Store.number"/>
                        <textField id="storeNameField" property="name" caption="msg://Store.name"/>
                        <pickerField id="storeRetailerField" property="retailer" caption="msg://Store.retailer">
                            <actions>
                                <action id="lookup" type="picker_lookup"/>
                                <action id="clear" type="picker_clear"/>
                            </actions>
                        </pickerField>
                        <textField id="storeCityField" property="address.city" caption="msg://Store.address.city"/>
                        <textField id="storeStreetField" property="address.street" caption="msg://Store.address.street"/>
                        <textField id="storeHouseField" property="address.building" caption="msg://Store.address.building"/>
                        <lookupField id="storeTypeField" property="type" caption="msg://Store.type"/>
                    </column>
                </form>
                <hbox id="editActions" spacing="true">
                    <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
                    <button id="closeBtn" action="windowClose"/>
                </hbox>
            </tab>
            <tab id="productsTab" caption="msg://products" spacing="true">
                <groupBox id="storeProductsBox" caption="msg://products">
                    <table id="storeProductsTable" dataContainer="storeProductDc" width="100%" height="200px">
                        <actions>
                            <action id="create" type="create">
                                <properties>
                                    <property name="openMode" value="DIALOG"/>
                                </properties>
                            </action>
                            <action id="edit" type="edit">
                                <properties>
                                    <property name="openMode" value="DIALOG"/>
                                </properties>
                            </action>
                            <action id="remove" type="remove"/>
                        </actions>
                        <buttonsPanel alwaysVisible="true">
                            <button id="storeProductsTableCreateBtn" action="storeProductsTable.create"/>
                            <button id="storeProductsTableEditBtn" action="storeProductsTable.edit"/>
                            <button id="storeProductsTableRemoveBtn" action="storeProductsTable.remove"/>
                        </buttonsPanel>
                        <columns>
                            <column id="product" caption="msg://StoreProduct.product"/>
                            <column id="price" caption="msg://StoreProduct.price"/>
                            <column id="amount" caption="msg://StoreProduct.amount"/>
                        </columns>
                    </table>
                </groupBox>
            </tab>
            <tab id="usersTab" caption="msg://users" spacing="true">
                <groupBox id="storeUsersBox" caption="msg://users">
                    <table id="usersTable" dataContainer="usersDc" width="100%" height="200px">
                        <actions>
                            <action id="add" type="add"/>
                            <action id="exclude" type="exclude"/>
                        </actions>
                        <buttonsPanel alwaysVisible="true">
                            <button id="usersTableAddBtn" action="usersTable.add"/>
                            <button id="usersTableExcludeBtn" action="usersTable.exclude"/>
                        </buttonsPanel>
                        <columns>
                            <column id="login"/>
                            <column id="name"/>
                            <column id="email"/>
                        </columns>
                    </table>
                </groupBox>
            </tab>
        </tabSheet>
    </layout>
</window>
